<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="35dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_better_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="StephenGuy11"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_taker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FootballGuy13"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_better_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/tv_better_name" />

        <TextView
            android:id="@+id/tv_better_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(22-17)"
            app:layout_constraintEnd_toEndOf="@+id/tv_better_name"
            app:layout_constraintStart_toStartOf="@+id/tv_better_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_better_name" />

        <TextView
            android:id="@+id/tv_taker_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(22-17)"
            app:layout_constraintEnd_toEndOf="@+id/tv_taker_name"
            app:layout_constraintStart_toStartOf="@+id/tv_taker_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_taker_name" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintEnd_toStartOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            app:srcCompat="@drawable/ic_baseline_circle_24" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVE"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_better_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_better_name"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:background="@drawable/rounded_corner"
            android:elevation="10dp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_better_name"
            app:layout_constraintStart_toStartOf="@+id/tv_better_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_better_">

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_better_name"
                app:layout_constraintStart_toStartOf="@+id/tv_better_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_better_">

                <ImageView
                    android:id="@+id/im_better_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brest" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_better_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/circular_shape"
                android:text="-7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_better_name"
            app:layout_constraintStart_toStartOf="@+id/tv_better_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_better_">

            <ImageView
                android:id="@+id/im_better"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/brest" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:background="@drawable/rounded_corner"
            android:elevation="10dp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_taker_name"
            app:layout_constraintStart_toStartOf="@+id/tv_taker_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_taker_">

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_better_name"
                app:layout_constraintStart_toStartOf="@+id/tv_better_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_better_">

                <ImageView
                    android:id="@+id/im_taker_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brest" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_taker_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/circular_shape"
                android:text="+7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_taker_name"
            app:layout_constraintStart_toStartOf="@+id/tv_taker_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_taker_">

            <ImageView
                android:id="@+id/im_taker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/brest" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="2nd | 01:02"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/myCardView4"
            app:layout_constraintStart_toEndOf="@+id/myCardView"
            app:layout_constraintTop_toBottomOf="@+id/tv_better_name" />

        <TextView
            android:id="@+id/tv_match_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 - 4"
            android:textColor="@color/black"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_time"
            app:layout_constraintStart_toStartOf="@+id/tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <LinearLayout
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tv_match_point"
            app:layout_constraintStart_toStartOf="@+id/tv_match_point"
            app:layout_constraintTop_toBottomOf="@+id/tv_match_point">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_better_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="BRAZIL"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <TextView
            android:id="@+id/tv_taker_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="BOLIVIA"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_better_team_name" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="39dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bet_amount"
            app:layout_constraintEnd_toStartOf="@+id/tv_bet_amount"
            app:layout_constraintTop_toTopOf="@+id/tv_bet_amount"
            app:srcCompat="@drawable/wanna_buck" />

        <TextView
            android:id="@+id/tv_bet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.00"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/tv_bet_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYS:500.50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_bet_amount"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_bet_amount" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>